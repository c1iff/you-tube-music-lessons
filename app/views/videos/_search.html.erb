<div class="search-area">

    <%= form_for @search, remote: true do |f| %>
    <%= render 'shared/errors', object: @search %>
    <div class="input-group">


        <span class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search button-icon"></i></button>
          <!-- <%= f.submit 'Search', class: 'btn btn-default' %> -->
        </span>
        <%= f.text_field :search_term, class: 'form-control', required: true, placeholder: 'Search for...' %>
        <% end %>
      </div>
      <br>
    <div class="results"></div>

</div>
