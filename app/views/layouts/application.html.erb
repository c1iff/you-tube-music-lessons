<!DOCTYPE html>
<html>
  <head>
    <title>YtLessons</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="navbar-full">
      <div id="navbar">
         <!--
          navbar-default can be changed with navbar-ct-blue navbar-ct-azzure navbar-ct-red navbar-ct-green navbar-ct-orange
          -->
          <nav class="navbar navbar-default navbar-fixed-top" role="navigation">

            <div class="container">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                  <%= link_to 'YouTube Lessons', root_path, class: 'navbar-brand navbar-brand-logo' %>
                  <!-- <div class="logo">
                    <img src="http://media.westernmutual.com/Content/Assets/wm_web_logo_small.png?v=1.0.17039.3">
                  </div> -->
              </div>
              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">

                      <li>
                          <%= link_to (root_path)  do %>
                              <i class="glyphicon glyphicon-film">
                              </i>
                              <p>Videos</p>
                          <% end %>
                      </li>

                      <li>
                          <%= link_to (new_video_path)  do %>
                              <i class="glyphicon glyphicon-plus">
                              </i>
                              <p>New Video</p>
                          <% end %>
                      </li>

                      <li>
                          <%= link_to (new_search_path)  do %>
                              <i class="glyphicon glyphicon-search">
                              </i>
                              <p>Search</p>
                          <% end %>
                      </li>

                      <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                  <i class="glyphicon glyphicon-user"></i>
                                  <p>Account</p>
                              </a>
                            <ul class="dropdown-menu">
                              <% if current_user %>
                                <li class="nav-item">
                                  <li><span><%= current_user.name %></span></li>
                                  <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
                                </li>
                              <% else %>
                                <li><%= link_to 'Log In', '/auth/google_oauth2' %></li>
                              <% end %>
                            </ul>
                      </li>
                 </ul>

              </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
          </nav>

      </div><!--  end navbar -->

  </div> <!-- end menu-dropdown -->

